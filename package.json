{
  "name": "atlas-desktop",
  "version": "0.2.2",
  "description": "Atlas - Voice-First AI Desktop Assistant",
  "main": "dist/main/index.js",
  "bin": {
    "atlas": "./dist/cli/index.js"
  },
  "author": "Ben",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 npm run build:vite",
    "build:vite": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:strict": "npm run build:vite && npm run build:electron",
    "build:all": "npm run build && electron-builder --config electron-builder.yml",
    "build:win": "npm run build && electron-builder --config electron-builder.yml --win",
    "build:mac": "npm run build && electron-builder --config electron-builder.yml --mac",
    "build:linux": "npm run build && electron-builder --config electron-builder.yml --linux",
    "build:icons": "electron-icon-builder --input=assets/icons/icon.svg --output=assets/icons",
    "pack": "npm run build && electron-builder --config electron-builder.yml --dir",
    "dist": "npm run build && electron-builder --config electron-builder.yml",
    "dist:win": "npm run build && electron-builder --config electron-builder.yml --win --publish never",
    "dist:mac": "npm run build && electron-builder --config electron-builder.yml --mac --publish never",
    "dist:linux": "npm run build && electron-builder --config electron-builder.yml --linux --publish never",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "typecheck:main": "tsc --noEmit -p tsconfig.main.json",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "vitest run tests/smoke/",
    "test:qa": "npx ts-node scripts/qa-test.ts",
    "test:qa:full": "npx ts-node scripts/qa-test.ts --full",
    "test:visual": "playwright test --config playwright.config.ts",
    "test:visual:update": "UPDATE_SNAPSHOTS=1 playwright test --config playwright.config.ts --update-snapshots",
    "test:visual:report": "playwright show-report tests/visual/reports",
    "test:visual:ui": "playwright test --config playwright.config.ts --ui",
    "coverage:report": "npx ts-node scripts/coverage-report.ts",
    "coverage:ci": "npx ts-node scripts/coverage-report.ts --ci",
    "coverage:trend": "npx ts-node scripts/coverage-report.ts --trend",
    "coverage:badge": "npx ts-node scripts/coverage-report.ts --badge",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps",
    "release": "npx ts-node scripts/release.ts",
    "release:dry-run": "npx ts-node scripts/release.ts --dry-run",
    "release:patch": "npx ts-node scripts/release.ts patch",
    "release:minor": "npx ts-node scripts/release.ts minor",
    "release:major": "npx ts-node scripts/release.ts major",
    "atlas-cli": "npx tsx src/main/cli/atlas-cli.ts"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.3",
    "@jitsi/robotjs": "^0.6.21",
    "@lancedb/lancedb": "^0.23.0",
    "@picovoice/cobra-node": "^3.0.1",
    "@picovoice/porcupine-node": "^4.0.1",
    "@picovoice/pvrecorder-node": "^1.2.8",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@react-three/postprocessing": "^2.16.0",
    "@reactflow/background": "^11.3.14",
    "@reactflow/controls": "^11.2.14",
    "@reactflow/core": "^11.11.4",
    "@ricky0123/vad-node": "^0.0.3",
    "@slack/bolt": "^4.6.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/pdf-parse": "^1.1.5",
    "@types/ws": "^8.18.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "ccxt": "^4.5.33",
    "chokidar": "^5.0.0",
    "chrome-remote-interface": "^0.33.3",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "discord.js": "^14.25.1",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.7.3",
    "events": "^3.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^12.26.2",
    "fs-extra": "^11.3.3",
    "glob": "^10.5.0",
    "googleapis": "^170.1.0",
    "grammy": "^1.39.3",
    "gray-matter": "^4.0.3",
    "keytar": "^7.9.0",
    "node-pty": "^1.1.0",
    "onnxruntime-node": "^1.23.2",
    "openai": "^6.16.0",
    "pdf-parse": "^2.4.5",
    "puppeteer-core": "^24.35.0",
    "python-shell": "^5.0.0",
    "reactflow": "^11.11.4",
    "recharts": "^3.6.0",
    "sharp": "^0.34.5",
    "spotify-web-api-node": "^5.0.2",
    "tesseract.js": "^5.1.1",
    "three": "^0.160.1",
    "truelayer-client": "^1.3.2",
    "twilio": "^5.11.2",
    "vosk-koffi": "^1.1.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.40.0",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/spotify-web-api-node": "^5.0.11",
    "@types/three": "^0.160.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^9.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eventemitter3": "^5.0.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  }
}
