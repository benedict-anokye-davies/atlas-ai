# Atlas Desktop - Environment Variables
# Copy this file to .env and fill in your API keys

# ===========================================
# REQUIRED: Voice Pipeline (Phase 1)
# ===========================================

# Porcupine - Wake word detection
# Get key at: https://picovoice.ai/ (free tier available)
PORCUPINE_API_KEY=your_porcupine_key_here

# Deepgram - Speech-to-text
# Get key at: https://deepgram.com/ (free tier: $200 credit)
DEEPGRAM_API_KEY=your_deepgram_key_here

# Cartesia - Text-to-speech (FASTEST ~90ms latency, recommended)
# Get key at: https://cartesia.ai/ 
CARTESIA_API_KEY=your_cartesia_key_here
CARTESIA_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091

# ElevenLabs - Text-to-speech (fallback ~300ms latency)
# Get key at: https://elevenlabs.io/ (free tier: 10k chars/month)
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=onyx

# Fireworks AI - Primary LLM
# Get key at: https://fireworks.ai/ (free tier available)
FIREWORKS_API_KEY=your_fireworks_key_here
FIREWORKS_MODEL=accounts/fireworks/models/deepseek-r1

# OpenRouter - Fallback LLM
# Get key at: https://openrouter.ai/ (pay-per-use)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ===========================================
# OPTIONAL: Research & Enhancement
# ===========================================

# Perplexity - AI-powered web search
# Get key at: https://www.perplexity.ai/ (API access required)
PERPLEXITY_API_KEY=your_perplexity_key_here

# ===========================================
# OPTIONAL: Future Phases
# ===========================================

# GitHub - For Git agent tools
GITHUB_TOKEN=your_github_token_here

# ===========================================
# APP CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug
LOG_DIR=~/.atlas/logs

# Audio
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Performance
WAKE_WORD_SENSITIVITY=0.5
VAD_THRESHOLD=0.5
VAD_SILENCE_DURATION=1500

# User
USER_NAME=User
